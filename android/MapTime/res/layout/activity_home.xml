<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80222222"
        android:orientation="vertical" >
    
    	<TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:textColor="#ffffff"
	        android:text="MapTime"
	        android:textSize="26dp" />
    	
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80222222"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
		android:paddingBottom="10dp" >
    	
        <TextView
	        android:id="@+id/textTimelineChoice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Timeline:"
	        android:textColor="#ffffff"
	        android:textSize="14dp" />
    	
    	<Spinner
		    android:id="@+id/timelines_dropdown"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
    	
    	<TextView
	        android:id="@+id/textStartPoint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Start Point:"
	        android:textColor="#ffffff"
	        android:textSize="14dp" />

    	<EditText
    	    android:id="@+id/txtBoxStartPoint"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:ems="10" >
    	</EditText>
    	
    	<TextView
	        android:id="@+id/textEndPoint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="End Point:"
	        android:textColor="#ffffff"
	        android:textSize="14dp" />

    	<EditText
    	    android:id="@+id/txtBoxEndPoint"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:ems="10" >

    	</EditText>
    	
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80222222"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
		android:paddingBottom="10dp" >

        <Button
            android:id="@+id/buttonPlotRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plot Route" />
        
        <Button
            android:id="@+id/buttonGotoMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goto Map" />
    	
	</LinearLayout>

</LinearLayout>
